<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
                     
    <persistence-unit name="cl.fatman.capital.fund.jpa">
    
        <description>
            Persistence unit for the fund project
        </description>

		<class>cl.fatman.capital.fund.Fund</class>
		<class>cl.fatman.capital.fund.FundType</class>
		<class>cl.fatman.capital.fund.FundRate</class>
        <class>cl.fatman.capital.fund.FomentUnit</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/fund" />
            <property name="javax.persistence.jdbc.user" value="prod" />
            <property name="javax.persistence.jdbc.password" value="prod123" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            
            <!-- Configuring Connection Pool -->
            <property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />
            <property name="hibernate.c3p0.min_size" value="1" />
            <property name="hibernate.c3p0.max_size" value="100" />
            <property name="hibernate.c3p0.acquire_increment" value="1" />
            <property name="hibernate.c3p0.idle_test_period" value="300" />
            <property name="hibernate.c3p0.timeout" value="60" />
        </properties>

    </persistence-unit>

</persistence>